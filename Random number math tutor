#include <iostream>
#include <random>
 
int main(){
     //Defining and setting up random engine 
     std::random_device myEngine;
     std::uniform_int_distribution<int> randomInt(0,1000);
     
     const int addition = 1,
          subtraction = 2,
          multiplication = 3,
          division = 4,
          quit = 5;
     int input; 
     
     int choice;
     do{
                     int num1 = randomInt(myEngine); //inserts random number to num1
                     
                     int num2 = randomInt(myEngine); //inserts random number to num2
         
         std::cout << "\n1-Addition"
                   << "\n2-Subtraction"
                   << "\n3-Multiplication"
                   << "\n4-Division"
                   << "\n5-Quit the program" 
                   << "\nPick a choice: "; 
                   std::cin >> choice; 
                   
                while (choice < addition || choice > quit){
                    std::cout << "INVALID INPUT";
         std::cout << "\n1-Addition"
                   << "\n2-Subtraction"
                   << "\n3-Multiplication"
                   << "\n4-Division"
                   << "\n5-Quit the program" 
                   << "\nPick a choice: "; 
                   std::cin >> choice;                     
                }
        if (choice != quit){
            switch (choice){
                case addition:{
                    std::cout << num1 << " + " << num2 << " = " << "? \n";
                    int answer = num1 + num2;
                    std::cout << "Answer the question: ";
                    std::cin >> input ;
                    if (input == answer){
                        std::cout << "Congrats, you got it right!!";
                     }else{
                        std::cout<<  "aw you got it wrong!\n" << "Answer is: " << answer;
                     }
                    break;
                }
                
                case subtraction:{
                    std::cout << num1 << " - " << num2 << " = " << "? \n";
                    int answer = num1 - num2;
                    std::cout << "Answer the question: ";
                    std::cin >> input ;
                    if (input == answer){
                        std::cout << "Congrats, you got it right!!";
                     }else{
                        std::cout<<  "aw you got it wrong!\n" << "Answer is: " << answer;
                     }
                    break; 
                }
                case multiplication:{
                    std::cout << num1 << " * " << num2 << " = " << "? \n";
                    int answer = num1 * num2;
                    std::cout << "Answer the question: ";
                    std::cin >> input ;
                    if (input == answer){
                        std::cout << "Congrats, you got it right!!";
                     }else{
                        std::cout<<  "aw you got it wrong!\n" << "Answer is: " << answer;
                     }
                    break; 
                }
                case division:{
                    std::cout << num1 << " / " << num2 << " = " << "? \n";
                    int answer = num1 / num2;
                    std::cout << "Answer the question, round to last integer: ";
                    std::cin >> input;
                    if (input == answer){
                        std::cout << "Congrats, you got it right!!";
                     }else{
                        std::cout<<  "aw you got it wrong!\n" << "Answer is: " << answer;
                     }
                    break; 
                }
                
            }
        }
     }while (choice != quit);
     
    return 0;
}
